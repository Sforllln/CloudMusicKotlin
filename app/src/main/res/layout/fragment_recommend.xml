<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zs.cloudmusickotlin.ui.fragment.foundmusic_child.RecommendFragment">

    <com.youth.banner.Banner
        android:id="@+id/banner_recommend"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@drawable/selector_banner_selected_radius"
        app:indicator_drawable_unselected="@drawable/selector_banner_unselected_radius"
        app:indicator_height="8dp"
        app:indicator_margin="5dp"
        app:indicator_width="8dp">


    </com.youth.banner.Banner>


</RelativeLayout>
