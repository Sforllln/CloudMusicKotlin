    <!--app:layout_constraintRight_toRightOf="@+id/cardview" app:layout_constraintTop_toTopOf="@+id/cardview"-->
    <!--app:layout_constraintVertical_bias="0.023" app:srcCompat="@mipmap/guide_shareview_one"/>-->


</android.support.constraint.ConstraintLayout>
